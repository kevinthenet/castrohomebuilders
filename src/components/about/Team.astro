---
import { Image } from 'astro:assets';
import Team1Image from '@assets/team-1.webp';
import Team2Image from '@assets/team-2.webp';

const team = [
  {
    name: 'Victor Castro',
    image: Team1Image,
    job: 'General Contractor, Owner',
  },
  {
    name: 'Kevin Castro',
    image: Team2Image,
    job: 'Web Developer',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="sm:space-8 space-y-12">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Meet our team</h2>
      <ul role="list" class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          team.map((item) => (
            <li class="rounded-3xl border border-primary-900/10 px-6 py-8 dark:border-primary-300/10">
              <div class="space-y-6">
                <Image class="mx-auto h-auto w-16 rounded-full" src={item.image} alt={item.name} />
                <div class="text-center">
                  <h3 class="text-lg font-medium">{item.name}</h3>
                  <p class="text-base text-primary-950/70 dark:text-primary-200/70">{item.job}</p>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
